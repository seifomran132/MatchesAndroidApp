<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewPlayers">

    <ListView
        android:id="@+id/TopPlayersGoals"
        android:layout_width="380dp"
        android:layout_height="305dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@+id/TopPLayersAssists"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextGoals"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/TopPLayersAssists"
        android:layout_width="380dp"
        android:layout_height="305dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextAssists"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/TextGoals"
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="Goals"
        android:textSize="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextAssists"
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:layout_marginTop="376dp"
        android:text="Assists"
        android:textSize="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>