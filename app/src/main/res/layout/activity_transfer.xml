<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransferActivity">

    <LinearLayout
        android:layout_width="432dp"
        android:layout_height="749dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/PlyerImgae"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="153dp"
            android:layout_height="129dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/OldClub"
                android:layout_width="120dp"
                android:layout_height="44dp"
                android:text="old club" />

            <TextView
                android:id="@+id/NewClub"
                android:layout_width="120dp"
                android:layout_height="44dp"
                android:text="new club" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="127dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/OldSalary"
                android:layout_width="127dp"
                android:layout_height="44dp"
                android:text="old salary" />

            <TextView
                android:id="@+id/NewSalary"
                android:layout_width="127dp"
                android:layout_height="44dp"
                android:text="new salary" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>